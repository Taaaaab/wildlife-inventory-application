extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='name') Class Name:
      input#name.form-control(type='text' placeholder='Mammalia' name='name' required='true' value=(undefined===animalclass ? '' : animalclass.name) )
    div.form-group
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg
