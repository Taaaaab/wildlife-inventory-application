extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Order:
      input#name.form-control(type='text', placeholder='Carnivora, Primates etc.' name='name' value=(undefined===order ? '' : order.name))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
